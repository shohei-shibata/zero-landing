---
import HeroText from '~/components/widgets/HeroText.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Newsletter Signup',
};
---

<Layout metadata={metadata}>
  <HeroText title="Email Verified">
    <Fragment slot="content">
      <p>You're all set!</p>
      <p>
        While you wait for the first newsletter, why not visit <a
          target="_blank"
          class="underline"
          href="https://buttondown.com/zeroturfmachines/archive/">the newsletter archive</a
        > to view past emails?
      </p>
    </Fragment>
  </HeroText>
  <CallToAction
    title="Also check out:"
    actions={[
      {
        text: 'Read the Manual',
        href: 'https:/docs.zeroturfmachines.com',
        target: '_blank',
        icon: 'tabler:book',
      },
      {
        text: 'Watch Videos',
        href: 'https://www.youtube.com/@zeroturfmachines',
        target: '_blank',
        icon: 'tabler:brand-youtube',
      },
    ]}
  />
</Layout>
