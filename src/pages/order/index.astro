---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import OrderInquiryForm from '~/components/widgets/OrderInquiryForm.astro';

const metadata = {
  title: 'Order Inquiry',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero 
  tagline="Ordering Your GR96"
    image={{
      src: '~/assets/images/brighter-3.png',
      alt: 'GR96',
      width: '500px',
      height: '350px'
    }}>
    <Fragment slot="title"> Ready to make the switch? </Fragment>

    <Fragment slot="subtitle">
      Manufacturing is underway. Order yours now!
    </Fragment>
  </Hero>

  <OrderInquiryForm
    name="order-inquiry-form"
    id="form"
    title="GR96 Order Inquiry Form"
    subtitle="Simply fill out the form below, and we'll reach back out to you to get the process started."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name*',
        required: true,
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email*',
        required: true,
      },
      {
        type: 'test',
        name: 'phone',
        label: 'Phone number',
      },
      {
        type: 'text',
        name: 'business-name',
        label: 'Name of your business',
      },
      {
        type: 'string',
        name: 'location',
        label: 'Your location',
      },
      {
        type: 'number',
        name: 'quantity',
        label: 'Planned purchase quantity',
      },
      {
        type: 'string',
        name: 'delivery-date',
        label: 'Desired delivery date',
      },
    ]}
    textarea={{
      label: 'Additional Comments',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    button='Submit'
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'General inquiries',
        description: `We're eager to tell you more about our product and all of its features!`,
      },
      {
        title: 'Contact sales',
        description: 'Talk to us about becoming a dealer or purchasing for your own business.',
      },
      {
        title: 'Technical support',
        description: `We're happy to help you through any technical issues you are having.`,
      },
      {
        title: 'Phone',
        description: '+1 (513) 609-9953',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description:
          '<a class="hover:underline" href="mailto:sales@zeroturfmachines.com">sales@zeroturfmachines.com</a>',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description:
          '<a class="hover:underline" target="_blank" href="https://maps.app.goo.gl/QuY5P8ZhSRU59Fbt7">789 US Route 50, Milford Ohio 45150</a>',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
