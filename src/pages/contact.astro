---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    name="contact-form"
    id="form"
    title="Drop us a message today!"
    subtitle="Want to learn more about the All-Electric GR-96? Interested in becoming a dealer or scheduling a demo? Send us a message and let's discuss!"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
        required: true,
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
        required: true,
      },
    ]}
    textarea={{
      label: 'Message',
      required: true,
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="We will do our best to respond within 24 hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'General inquiries',
        description: `W're eager to tell you more about our product and all of its features!`,
      },
      {
        title: 'Contact sales',
        description:
          'Talk to us about becoming a dealer or purchasing for your own business.',
      },
      {
        title: 'Technical support',
        description:
          `We're happy to help you through any technical issues you are having.`,
      },
      {
        title: 'Phone',
        description: '+1 (513) 609-9953',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: '<a class="hover:underline" href="mailto:sales@zeroturfmachines.com">sales@zeroturfmachines.com</a>',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '<a class="hover:underline" target="_blank" href="https://maps.app.goo.gl/QuY5P8ZhSRU59Fbt7">789 US Route 50, Milford Ohio 45150</a>',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
