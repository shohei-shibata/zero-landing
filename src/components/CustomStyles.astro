---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: #DCAB4E;
    --aw-color-secondary: #CC9328;
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: hsl(224, 14%, 16%);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: #DCAB4E;
    --aw-color-secondary: #CC9328;
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(244 244 245);
    --aw-color-text-default: rgb(244 244 245);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: hsl(224, 14%, 8%);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
